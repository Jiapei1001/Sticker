<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="6dp"
    >

    <RelativeLayout
        android:layout_width="405dp"
        android:layout_height="99dp"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="58dp"
            android:fontFamily="@font/dancing_script_bold"
            android:textColor="#141E61"

            android:text="@string/username" />

        <Button
            android:id="@+id/btnSendStickers"
            android:layout_width="108dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="18dp"
            android:layout_toEndOf="@+id/btnChatHistory"
            android:background="@drawable/rounded_corners"
            android:fontFamily="@font/merriweather_blackitalic"
            android:text="@string/send_stickers"
            android:textAllCaps="false"
            android:textColor="#141E61"
            android:textSize="9sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnChatHistory"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/rounded_corners"
            android:fontFamily="@font/merriweather_blackitalic"
            android:text="@string/chat_history"
            android:textAllCaps="false"
            android:textColor="#141E61"
            android:textSize="9sp"
            app:backgroundTint="@null" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>